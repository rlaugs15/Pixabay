{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".", // 기준 경로를 프로젝트 루트로 설정
    "paths": {
      "@/*": ["src/*"] // @를 src로 매핑
    }
  },
  "include": ["src", "vite-env.d.ts"]
}
